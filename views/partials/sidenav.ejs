
    <div id="users" class="col s2">
        <% if (!user) { %>
            <a href="/recipes"><h5 class="white">View All Recipes</h5></a>
            <h5>Login for additional functionality</h5>
        <% } else { %>
            <h5><%= user.name %></h5>
            <h6 class="user-id"><%= user.id %></h6>
            <ul class="collection">
                <li class="collection-item"><a href="/user/">Dashboard</a></li>
                <li class="collection-item"><a href="/user/recipes">My Recipes</a></li>
            </ul>
        <% } %>
    </div>
